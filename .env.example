# ==============================================
# Database Configuration
# ==============================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=documents
DB_USERNAME=root
DB_PASSWORD=changeme

# ==============================================
# Azure Document Intelligence (Form Recognizer)
# ==============================================
AZURE_FORM_RECOGNIZER_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_FORM_RECOGNIZER_KEY=your-subscription-key-here
AZURE_FORM_RECOGNIZER_MODEL_ID=prebuilt-invoice

# ==============================================
# Azure Blob Storage
# ==============================================
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account
AZURE_STORAGE_ACCOUNT_KEY=your-storage-key
AZURE_STORAGE_CONTAINER_NAME=documents

# ==============================================
# Azure Cognitive Search (Optional - for semantic search)
# ==============================================
AZURE_SEARCH_ENDPOINT=https://your-search.search.windows.net
AZURE_SEARCH_KEY=your-search-key
AZURE_SEARCH_INDEX_NAME=documents-index

# ==============================================
# JWT Configuration
# ==============================================
JWT_SECRET=your-secure-jwt-secret-key-min-256-bits
JWT_EXPIRATION_MS=3600000
JWT_REFRESH_EXPIRATION_MS=86400000

# ==============================================
# Keycloak Configuration
# ==============================================
KEYCLOAK_AUTH_SERVER_URL=http://localhost:8081
KEYCLOAK_REALM=document-analyzer
KEYCLOAK_RESOURCE=document-analyzer-client
KEYCLOAK_CLIENT_SECRET=your-keycloak-client-secret

# ==============================================
# Application Configuration
# ==============================================
SERVER_PORT=8080
CORS_ALLOWED_ORIGINS=http://localhost:4200,http://localhost:8080
SPRING_PROFILES_ACTIVE=dev

# ==============================================
# File Upload Configuration
# ==============================================
MAX_FILE_SIZE=20MB
MAX_REQUEST_SIZE=20MB

# ==============================================
# Email Configuration (Optional)
# ==============================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password
MAIL_FROM=noreply@document-analyzer.com
