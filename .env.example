# JWT Configuration (Required for authentication)
JWT_SECRET=default-secret-key-for-development-only-change-in-production
JWT_EXPIRATION_MS=3600000
JWT_REFRESH_EXPIRATION_MS=86400000

# Keycloak Configuration (Optional - for future SSO integration)
# Uncomment when enabling Keycloak SSO
# KEYCLOAK_AUTH_SERVER_URL=http://localhost:8081
# KEYCLOAK_REALM=document-analyzer
# KEYCLOAK_RESOURCE=document-analyzer-client
# KEYCLOAK_CLIENT_SECRET=your-client-secret-here

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=smartdocs
DB_USERNAME=root
DB_PASSWORD=changeme

# Server Configuration
SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=dev

# Azure Configuration (Optional - for document analysis)
# AZURE_FORM_RECOGNIZER_ENDPOINT=
